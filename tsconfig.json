{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "dist",

    "module": "esnext",
    "target": "es2018",

    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    "importHelpers": true,
    "lib": ["esnext"],
    
    "sourceMap": true,
    "declaration": true,
    
    "alwaysStrict": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "suppressImplicitAnyIndexErrors": true,

    "paths": {
      "@testing-utils": ["packages/testing/utils.ts"],
      "@graphql-toolkit/common": [ "packages/common/src/index.ts" ],
      "@graphql-toolkit/core": [ "packages/core/src/index.ts" ],
      "@graphql-toolkit/file-loading": [ "packages/file-loading/src/index.ts" ],
      "@graphql-toolkit/graphql-tag-pluck": [ "packages/graphql-tag-pluck/src/index.ts" ],
      "@graphql-toolkit/relay-operation-optimizer": [ "packages/relay-operation-optimizer/src/index.ts" ],
      "@graphql-toolkit/schema-merging": [ "packages/schema-merging/src/index.ts" ],
      "@graphql-toolkit/apollo-engine-loader": [ "packages/loaders/apollo-engine/src/index.ts" ],
      "@graphql-toolkit/code-file-loader": [ "packages/loaders/code-file/src/index.ts" ],
      "@graphql-toolkit/git-loader": [ "packages/loaders/git/src/index.ts" ],
      "@graphql-toolkit/github-loader": [ "packages/loaders/github/src/index.ts" ],
      "@graphql-toolkit/graphql-file-loader": [ "packages/loaders/graphql-file/src/index.ts" ],
      "@graphql-toolkit/json-file-loader": [ "packages/loaders/json-file/src/index.ts" ],
      "@graphql-toolkit/module-loader": [ "packages/loaders/module/src/index.ts" ],
      "@graphql-toolkit/prisma-loader": [ "packages/loaders/prisma/src/index.ts" ],
      "@graphql-toolkit/url-loader": [ "packages/loaders/url/src/index.ts" ]
    }
  }
}