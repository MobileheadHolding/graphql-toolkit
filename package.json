{
  "private": true,
  "scripts": {
    "clean": "lerna clean --yes && rm -rf node_modules",
    "build": "lerna run build",
    "test": "lerna run test",
    "lint": "lerna run lint -- --fix",
    "format": "prettier --write packages/**/*.{js,json,css,md,ts,tsx}",
    "prerelease": "yarn build && yarn test",
    "prerelease:canary": "yarn prerelease",
    "release": "lerna publish --exact --force-publish=\"*\"",
    "release:canary": "exit 0",
    "ci:release:canary": "yarn release:canary --yes"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "engines": {
		"node": ">=10"
	},
  "lint-staged": {
    "packages/**/src/**/*.{ts,tsx}": [
      "tslint --fix",
      "git add"
    ],
    "packages/**/*.{js,json,css,md,ts,tsx}": [
      "prettier --write",
      "git add -f"
    ]
  },
  "devDependencies": {
    "@types/jest": "25.1.4",
    "bob-the-bundler": "0.3.0-alpha.7",
    "graphql": "14.6.0",
    "husky": "4.2.3",
    "jest": "25.1.0",
    "lerna": "3.20.2",
    "lint-staged": "10.0.8",
    "prettier": "1.19.1",
    "tslint": "6.1.0",
    "ts-jest": "25.2.1",
    "typescript": "3.8.3"
  },
  "workspaces": [
    "packages/*",
    "packages/loaders/*"
  ]
}
